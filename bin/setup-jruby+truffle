#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

export SULONG_HOME="$HOME/graalvm/sulong"
export RUBY_HOME="$HOME/graalvm/jruby"
export GEM_HOME="`pwd`"

ln -s "$RUBY_HOME/bin/bundle" bin/bundle
"$RUBY_HOME/bin/jruby+truffle" setup
rm bin/bundle

cd "$RUBY_HOME"
tool/jt.rb cextc "$GEM_HOME"
cd "$GEM_HOME"
